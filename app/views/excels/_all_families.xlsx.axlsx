wb = xlsx_package.workbook
wb.styles do |style|
  highlight_cell = style.add_style(bg_color: "f2f2f2")
	wb.add_worksheet(name: "Familles") do |sheet|
		sheet.add_row [
			'Nom',
      'Situation Familiale',
      'Adresse',
      'Complément',
      'Code Postal',
      'Pays',
      'Téléphone',
      'Email',
      'Père',
      'Email Père',
      'Portable Père',
      'Tél bureau Père',
      'Contact Principal Père',
      'Mère',
      'Email Mère',
      'Portable Mère',
      'Tél Bureau Mère',
      'Contact Principal Mère'
		], style: [
			highlight_cell,
      highlight_cell,
      highlight_cell,
      highlight_cell,
      highlight_cell,
      highlight_cell,
      highlight_cell,
      highlight_cell,
      highlight_cell,
      highlight_cell,
      highlight_cell,
      highlight_cell,
      highlight_cell,
      highlight_cell,
      highlight_cell,
      highlight_cell,
			highlight_cell,
			highlight_cell
		]
	  @ressource.each do |family|
	    sheet.add_row [
        family.name,
	    	family.family_situation,
	    	family.address_1,
	    	family.address_2,
        family.zip_code,
	    	family.country,
	    	family.intl_number,
	    	family.email,
        family.father_name,
	    	family.father_email,
        family.father_intl_number,
        family.father_office_intl_number,
        family.father_main_contact,
        family.mother_name,
        family.mother_email,
        family.mother_intl_number,
        family.mother_office_intl_number,
        family.mother_main_contact
	    ]
	  end
	end
end
