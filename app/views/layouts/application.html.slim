doctype html
html
  head
    meta charset="windows-1252" /
    meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport" /
    = favicon_link_tag asset_path('logo.png'), :rel => 'icon', :type =>  'image/png'

    title Home Abroad Backoffice
    = csrf_meta_tags
    = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"
    = javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"
    = action_cable_meta_tag
    / = javascript_include_tag "../node_modules/intl-tel-input/src/js/intlTelInput.js"
    = stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css"
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_pack_tag 'application', 'data-turbolinks-track':'reload', defer: true
    = stylesheet_pack_tag 'application'
    = javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{ENV['google_map_api_key']}&libraries=places", defer: 'defer'
    = javascript_include_tag 'application'
    / = stylesheet_pack_tag 'application', media: 'all'
    /! Uncomment if you import CSS in app/javascript/packs/application.js
  body
    - if user_signed_in?
        = render 'shared/components/navbar/top_navbar'
        = render 'shared/flashes'
    .page-wrapper
        .container-fluid
            .row
            = yield
